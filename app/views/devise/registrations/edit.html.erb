<div class="login-container">
  <div class="text-center mb-4">
    <h1 class="h3 mb3 font-weight-normal">Edit <%= resource_name.to_s.humanize %></h1>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-12"> 
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <div class="form-group">
            <%= f.label :firstname, "Firstname", class: "log-label"%>
            <%= f.input :firstname,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "firstname" },
                      placeholder: "Firstname",
                      label:false,
                      class: "input-group mb-3"
                      %>
          </div>
          <div class="form-group">
            <%= f.label :lastname, "Lastname", class: "log-label"%>
            <%= f.input :lastname,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "lastname" },
                      placeholder: "Lastname",
                      label:false
                      %>
          </div>
          <div class="form-group">
            <%= f.label :phone, "Phone", class: "log-label"%>
            <%= f.input :phone, as: :numeric,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "phone" },
                      placeholder: "Phone",
                      label:false
                      %>  
          </div>
          <div class="form-group">
            <%= f.label :email, "Email", class: "log-label"%>
            <%= f.input :email, required: true, autofocus: true,
              placeholder: "Email",
              label:false
              %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password, "New Password", class: "log-label"%>
            <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" },
                      placeholder: "New Password",
                      label:false
                       %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Password confirmation", class: "log-label"%>
            <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" },
                      placeholder: "Password confirmation",
                      label:false
                       %>
          </div>
          <div class="form-group">
            <%= f.label :current_password, "Current Password", class: "log-label"%>
            <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" },
                      placeholder: "Current Password",
                      label:false
                       %>
          </div> 
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class: "btn-dark log-btn btn-lg" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>

</div>