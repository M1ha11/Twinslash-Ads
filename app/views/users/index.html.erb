<div>
  <% if current_user && current_user.role == 'admin' %>
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item users">
          <ul class="list-group list-group-horizontal-md">
            <li class="list-group-item users-list">
              <span class="us-cur">Firstname: </span><%= user.firstname %>
            </li>
            <li class="list-group-item users-list">
              <span class="us-cur">Lastname: </span><%= user.lastname %>
            </li>
            <li class="list-group-item users-list">
              <span class="us-cur">Email: </span><%= user.email %>
            </li>
            <li class="list-group-item users-list">
              <span class="us-cur">Phone: </span><%= user.phone %>
            </li>
            <li class="list-group-item users-list">
              <span class="us-cur">Role: </span><%= user.role %>
            </li>
            <li class="list-group-item users-list">
              <%= link_to 'Edit', edit_user_path(user) %>
            </li>
            <li class="list-group-item users-list">
              <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
